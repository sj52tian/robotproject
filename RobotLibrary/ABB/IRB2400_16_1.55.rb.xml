<SerialDevice name="IRB2400_16">
    <Frame name="Robot_Base" refframe="Robot_LOC" type="Movable">
        <RPY> 0 0 0 </RPY> <Pos> 0 0 0</Pos> 
        <Property name="ObjType"  desc="Object Type"> OBJ_TYPE_ROBOT </Property>
		<Property name="RobotType"  desc="Robot Type"> PARALLELOGRAM_ROBOT </Property>
		<Property name="Joint2MaxLimit" desc="the min and max angle of joint2">-100,110</Property>
		<Property name="Joint3MaxLimit" desc="the min and max angle of joint3">-160,175</Property>
		<Property name="PostProcess" desc=" lua">ABB.lua</Property>
    </Frame>


    <DHJoint name="Joint1" alpha="0" a="0" d="615" offset="0" type="craig"></DHJoint>

    <DHJoint name="Joint2" alpha="-90" a="100" d="0" offset="-90" type="craig"></DHJoint>

    <DHJoint name="Joint3" alpha="0" a="705" d="0" offset="0" type="craig"></DHJoint>

    <DHJoint name="Joint4" alpha="-90" a="135" d="755" offset="0" type="craig"></DHJoint>

    <DHJoint name="Joint5"  alpha="90" a="0" d="0" offset="0" type="craig"></DHJoint>

    <DHJoint name="Joint6" alpha="-90" a="0" d="0" offset="0" type="craig"></DHJoint>

    <Frame name="ToolMount" refframe="Joint6" >
        <RPY> 180 0 0 </RPY> <Pos> 0 0 85 </Pos> 
    </Frame>

    <PosLimit refjoint="Joint1" min="-180" max="180" />   <!--数据不准确，参考robotstudio-->
    <PosLimit refjoint="Joint2" min="-65" max="60" />
    <PosLimit refjoint="Joint3" min="-60" max="65" />
    <PosLimit refjoint="Joint4" min="-200" max="200" />
    <PosLimit refjoint="Joint5" min="-120" max="120" />
    <PosLimit refjoint="Joint6" min="-400" max="400" />

