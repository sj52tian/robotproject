<!--Joint3正负限位参数会导致碰撞-->
<!--joint5的正负限位有（-90~135）与（-135~90）之分，不确定是哪一个？？-->
<!--4 、5、6关节模型在Y（world）方向有0.5mm偏差-->

<SerialDevice name="MA1400">
    <Frame name="Robot_Base" type="Movable">
        <RPY> 0 0 0 </RPY> <Pos> 0 0 450</Pos> 
        <Property name="ObjType"  desc="Object Type"> OBJ_TYPE_ROBOT </Property>
		<Property name="PostProcess" desc=" lua">Yaskawa.lua</Property>
    </Frame>


    <DHJoint name="Joint1" alpha="0" a="0" d="0" offset="0" type="craig"></DHJoint>

    <DHJoint name="Joint2" alpha="-90" a="155" d="0" offset="-90" type="craig"></DHJoint>

    <DHJoint name="Joint3" alpha="180" a="614" d="0" offset="0" type="craig"></DHJoint>

    <DHJoint name="Joint4" alpha="-90" a="200" d="-640" offset="0" type="craig"></DHJoint>

    <DHJoint name="Joint5"  alpha="90" a="0" d="0" offset="0" type="craig"></DHJoint>

    <DHJoint name="Joint6" alpha="90" a="0" d="100" offset="0" type="craig"></DHJoint>

    <Frame name="ToolMount" refframe="Joint6" > 
        <RPY> 0 0 0 </RPY> <Pos> 0 0 0 </Pos> 
    </Frame>

    <PosLimit refjoint="Joint1" min="-170" max="170" />   
    <PosLimit refjoint="Joint2" min="-90" max="155" /> 
    <PosLimit refjoint="Joint3" min="-175" max="240" /> <!--Joint3正负限位参数会导致碰撞-->
    <PosLimit refjoint="Joint4" min="-150" max="150" />
    <PosLimit refjoint="Joint5" min="-135" max="90" /> <!--joint5的正负限位有（-90~135）与（-135~90）之分，不确定是哪一个？？-->
    <PosLimit refjoint="Joint6" min="-210" max="210" />

    <VelLimit refjoint="Joint1" max="230" />
    <VelLimit refjoint="Joint2" max="200" />
    <VelLimit refjoint="Joint3" max="230" /> 
    <VelLimit refjoint="Joint4" max="430" />
    <VelLimit refjoint="Joint5" max="430" />
    <VelLimit refjoint="Joint6" max="630" />

    <!--<AccLimit refjoint="Joint1" max="120" />
    <AccLimit refjoint="Joint2" max="120" />
    <AccLimit refjoint="Joint3" max="120" /> 
    <AccLimit refjoint="Joint4" max="120" />
    <AccLimit refjoint="Joint5" max="120" />
    <AccLimit refjoint="Joint6" max="120" />-->

    <Drawable name="BaseGeo" refframe="Robot_Base">
        <RPY> 0 0 0 </RPY> <Pos> 0 0 -450</Pos>
        <Polytope file="../RobotData/Yaskawa/MA1400/Geometry/base" unit="MM" color="40 120 255"/></Drawable>
    <Drawable name="J1Geo" refframe="Joint1">
        <RPY> 0 0 0 </RPY> <Pos> 0 0 -450 </Pos>
        <Polytope file="../RobotData/Yaskawa/MA1400/Geometry/joint1" unit="MM" color="40 120 255"/></Drawable>
    <Drawable name="J2Geo" refframe="Joint2">
        <RPY> 90 0 90 </RPY> <Pos> -450 -155 0 </Pos>
        <Polytope file="../RobotData/Yaskawa/MA1400/Geometry/joint2" unit="MM" color="40 120 255"/></Drawable>    
    <Drawable name="J3Geo" refframe="Joint3">
        <RPY> -90 0 -90 </RPY> <Pos> -1064 155 0</Pos>
        <Polytope file="../RobotData/Yaskawa/MA1400/Geometry/joint3" unit="MM" color="40 120 255"/></Drawable>  
    <Drawable name="J4Geo" refframe="Joint4">
        <RPY> 0 90 0 </RPY> <Pos> -1264 -0.5 795 </Pos>
        <Polytope file="../RobotData/Yaskawa/MA1400/Geometry/joint4" unit="MM" color="40 120 255"/></Drawable>
    <Drawable name="J5Geo" refframe="Joint5">
        <RPY> -90 0 -90 </RPY> <Pos> -1264 795 0 </Pos>  
        <Polytope file="../RobotData/Yaskawa/MA1400/Geometry/joint5" unit="MM" color="40 120 255"/></Drawable>
    <Drawable name="J6Geo" refframe="Joint6">
        <RPY> 180 -90 0 </RPY> <Pos> -1264 -0.5 -895 </Pos>  
        <Polytope file="../RobotData/Yaskawa/MA1400/Geometry/joint6" unit="MM" color="0 43 54"/></Drawable>

    <CollisionSetup file="../RobotData/Yaskawa/MA1400/CollisionSetup.xml" />

    <Q name="Home">0 0 0 0 0 0</Q>

</SerialDevice>
